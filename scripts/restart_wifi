####################################################
                   #RESTART WIFI#
####################################################

clear
echo
echo 'restart wifi ...'
echo

if nmcli -c yes -p radio wifi off
    then sleep 3
    else echo "ERROR: WIFI"; exit 1;
fi

if nmcli -c yes -p radio wifi on
    then echo "WIFI --> ready"
    else echo "ERROR: WIFI"; exit 1;
fi

sleep 3

exit 0

################# END RESTART WIFI #################
