####################################################
                    #MAC_SPOOF#
####################################################

wifi_int=$1

clear

sudo ifconfig $wifi_int down || { echo "ERROR: $wifi_int"; exit 1; }

sudo macchanger -A -r $wifi_int || { echo "ERROR: $wifi_int"; exit 1; }

sudo ifconfig $wifi_int up || { echo "ERROR: $wifi_int"; exit 1; }

exit 0
    
############### END MAC_SPOOF ######################
